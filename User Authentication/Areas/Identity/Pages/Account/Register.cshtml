@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="row mb-3">
        <div class="form-floating col-md-6">
            <input asp-for="Input.FirstName" class="form-control" autocomplete="on" aria-required="true" placeholder="FirstName" />
            <label asp-for="Input.FirstName" class="px-4">First Name</label>
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>
        <div class="form-floating col-md-6">
            <input asp-for="Input.LastName" class="form-control" autocomplete="on" aria-required="true" placeholder="LastName" />
            <label asp-for="Input.LastName" class="px-4">Last Name</label>
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="form-floating col-md-6">
            <input asp-for="Input.UserName" class="form-control" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.UserName" class="px-4">User Name</label>
            <span asp-validation-for="Input.UserName" class="text-danger"></span>
        </div>
        <div class="form-floating col-md-6">
            <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email" class="px-4">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="form-floating col-md-6">
            <input asp-for="Input.Password" class="form-control" aria-required="true" placeholder="password" />
            <label asp-for="Input.Password" class="px-4">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-floating col-md-6">
            <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" placeholder="password" />
            <label asp-for="Input.ConfirmPassword" class="px-4">Confirm Password</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </div>        
        <div class="col-md-6">
            <button id="registerReset" type="reset" class="w-100 btn btn-lg btn-secondary">Reset</button>
        </div>        
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
